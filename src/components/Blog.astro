---
import { siteConfig } from "../config";
const hasBlogs = siteConfig.blogs && siteConfig.blogs.length > 0;
---

{
  hasBlogs && (
    <section id="blog" class="p-8 sm:p-12 md:p-16 lg:p-24 bg-gray-50">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
              Blogs
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
            <p class="mt-6 text-lg text-gray-600">
              Sharing insights, tutorials, and thoughts on software development, system design, and technology.
            </p>
          </div>

          <div class="lg:col-span-8">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 lg:gap-8">
              {siteConfig.blogs.map((blog, index) => (
                <article class="group cursor-pointer blog-card">
                  <a
                    href={`/blog/${blog.id}`}
                    class="block h-full bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden hover:shadow-xl hover:-translate-y-2 transition-all duration-500 ease-out hover:border-gray-300"
                  >
                    <div class="aspect-[16/10] overflow-hidden bg-gray-100">
                      <img
                        src={blog.image}
                        alt={blog.title}
                        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700 ease-out"
                        loading="lazy"
                      />
                    </div>
                    <div class="p-6">
                      <div class="flex items-center gap-3 mb-3">
                        <time 
                          class="text-xs text-gray-500 font-medium"
                          datetime={blog.publishedAt}
                        >
                          {new Date(blog.publishedAt).toLocaleDateString('en-US', {
                            year: 'numeric',
                            month: 'long',
                            day: 'numeric'
                          })}
                        </time>
                        <span class="w-1 h-1 rounded-full bg-gray-300"></span>
                        <span class="text-xs text-gray-500 font-medium">
                          {blog.readTime}
                        </span>
                      </div>
                      
                      <h3 class="text-xl font-bold text-gray-900 mb-3 line-clamp-2 group-hover:text-gray-700 transition-colors duration-300">
                        {blog.title}
                      </h3>
                      
                      <p class="text-gray-600 text-sm leading-relaxed mb-4 line-clamp-3">
                        {blog.description}
                      </p>
                      
                      <div class="flex flex-wrap gap-2 mb-4">
                        {blog.tags.map((tag) => (
                          <span
                            class="px-2.5 py-1 bg-gray-100 text-gray-700 rounded-md text-xs font-medium hover:bg-gray-200 transition-colors duration-200"
                          >
                            {tag}
                          </span>
                        ))}
                      </div>
                      
                      <div class="flex items-center text-sm font-medium group-hover:translate-x-1 transition-transform duration-300"
                           style={`color: ${siteConfig.accentColor}`}>
                        Read more
                        <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                        </svg>
                      </div>
                    </div>
                  </a>
                </article>
              ))}
            </div>
            
            <!-- View All Blog Posts Link -->
            <div class="mt-12 text-center">
              <a
                href="/blog"
                class="inline-flex items-center px-6 py-3 bg-gray-900 text-white rounded-lg hover:bg-gray-800 transition-all duration-300 hover:shadow-lg hover:-translate-y-0.5 font-medium"
              >
                View All Posts
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .blog-card {
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
    transform: translateY(30px);
  }
  
  .blog-card:nth-child(1) { animation-delay: 0.1s; }
  .blog-card:nth-child(2) { animation-delay: 0.2s; }
  .blog-card:nth-child(3) { animation-delay: 0.3s; }
  .blog-card:nth-child(4) { animation-delay: 0.4s; }
  
  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
