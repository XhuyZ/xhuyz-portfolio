---
import { siteConfig } from "../../config";
import "../../styles/global.css";

// Sort blogs by date (newest first)
const sortedBlogs = siteConfig.blogs.sort((a, b) => 
  new Date(b.publishedAt).getTime() - new Date(a.publishedAt).getTime()
);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Blog posts by Huy Nguyen - Software development, tutorials, and insights" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />
    <title>Blog - {siteConfig.name}</title>
  </head>
  <body class="bg-gray-50">
    <!-- Header -->
    <header class="bg-white border-b border-gray-200 sticky top-0 z-50 backdrop-blur-sm bg-white/95">
      <nav class="max-w-7xl mx-auto px-6 lg:px-8 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="flex items-center space-x-2 group">
            <span class="text-xl font-bold text-gray-900 group-hover:text-gray-700 transition-colors">
              {siteConfig.name}
            </span>
            <div class="w-2 h-2 rounded-full" style={`background-color: ${siteConfig.accentColor}`}></div>
          </a>
          <div class="flex items-center space-x-6">
            <a href="/#about" class="text-gray-600 hover:text-gray-900 transition-colors font-medium">About</a>
            <a href="/#projects" class="text-gray-600 hover:text-gray-900 transition-colors font-medium">Projects</a>
            <a href="/blog" class="text-gray-900 font-semibold border-b-2" style={`border-color: ${siteConfig.accentColor}`}>Blog</a>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <!-- Hero Section -->
      <section class="py-16 lg:py-24 bg-white">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
          <div class="text-center max-w-3xl mx-auto">
            <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
              My Blog
            </h1>
            <div class="w-24 h-1 mx-auto mb-8 rounded-full" style={`background-color: ${siteConfig.accentColor}`}></div>
            <p class="text-xl text-gray-600 leading-relaxed">
              Sharing insights about software development, system design, and the ever-evolving world of technology.
            </p>
          </div>
        </div>
      </section>

      <!-- Blog Posts Grid -->
      <section class="py-16 lg:py-24">
        <div class="max-w-7xl mx-auto px-6 lg:px-8">
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {sortedBlogs.map((blog, index) => (
              <article class="group blog-card bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden hover:shadow-2xl hover:-translate-y-2 transition-all duration-500">
                <a href={`/blog/${blog.id}`} class="block h-full">
                  <div class="aspect-[16/10] overflow-hidden bg-gray-100">
                    <img
                      src={blog.image}
                      alt={blog.title}
                      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                      loading="lazy"
                    />
                  </div>
                  <div class="p-6 lg:p-8">
                    <div class="flex items-center gap-3 mb-4">
                      <time 
                        class="text-sm text-gray-500 font-medium"
                        datetime={blog.publishedAt}
                      >
                        {new Date(blog.publishedAt).toLocaleDateString('en-US', {
                          year: 'numeric',
                          month: 'long',
                          day: 'numeric'
                        })}
                      </time>
                      <span class="w-1 h-1 rounded-full bg-gray-300"></span>
                      <span class="text-sm text-gray-500 font-medium">
                        {blog.readTime}
                      </span>
                    </div>
                    
                    <h2 class="text-xl lg:text-2xl font-bold text-gray-900 mb-4 line-clamp-2 group-hover:text-gray-700 transition-colors">
                      {blog.title}
                    </h2>
                    
                    <p class="text-gray-600 leading-relaxed mb-6 line-clamp-3">
                      {blog.description}
                    </p>
                    
                    <div class="flex flex-wrap gap-2 mb-6">
                      {blog.tags.map((tag) => (
                        <span class="px-3 py-1.5 bg-gray-100 text-gray-700 rounded-full text-sm font-medium hover:bg-gray-200 transition-colors">
                          {tag}
                        </span>
                      ))}
                    </div>
                    
                    <div class="flex items-center font-medium group-hover:translate-x-2 transition-transform duration-300"
                         style={`color: ${siteConfig.accentColor}`}>
                      Read article
                      <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                      </svg>
                    </div>
                  </div>
                </a>
              </article>
            ))}
          </div>
        </div>
      </section>
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 mt-24">
      <div class="max-w-7xl mx-auto px-6 lg:px-8 py-12">
        <div class="text-center">
          <p class="text-gray-600">
            Â© {new Date().getFullYear()} {siteConfig.name}. All rights reserved.
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .blog-card {
    animation: fadeInUp 0.8s ease-out forwards;
    opacity: 0;
    transform: translateY(40px);
  }
  
  .blog-card:nth-child(1) { animation-delay: 0.1s; }
  .blog-card:nth-child(2) { animation-delay: 0.2s; }
  .blog-card:nth-child(3) { animation-delay: 0.3s; }
  .blog-card:nth-child(4) { animation-delay: 0.4s; }
  .blog-card:nth-child(5) { animation-delay: 0.5s; }
  
  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
